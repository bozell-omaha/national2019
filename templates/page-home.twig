                <div class="home-sponsors__sponsor">
                    <img src="{{site.link}}/wp-content/themes/linc2019/assets/img/wisdom tree@2x@2x.png" alt="">
                </div>
            </div>
            <div class="home-sponsors__cta">
                <a href="{{site.link}}/sponsors" class="cta">
                    <span>View all</span>
                    {% include 'partial/svg/right-arrow.svg' %}
                </a>
            </div>
        </div>
	</div><!-- /content-wrapper -->
