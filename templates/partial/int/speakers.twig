<div class="pattern speaker-bio__pattern"></div>

<section class="speakers">
    <h1 class="speakers__heading">Featured Keynote Speakers</h1>
    <div class="speakers__wrapper">
    {% for speaker in speakers %}
        {% if speaker.keynote == 'featured' %}
        <div class="speaker">
            <div class="speaker__inner">
                <div class="speaker__img" style="background-image: url('{{TimberImage(speaker.image)}}')" ></div>
                <div class="speaker-info">
                    <span class="speaker-info__name">{{speaker.name}}</span>
                    <span class="speaker-info__title">{{speaker.position}}</span>
                </div>
                <div class="speaker__bio">{{speaker.bio|wpautop}}</div>
            </div>
            <a class="speaker-link" href="{{speaker.link}}" class="speaker__link"></a>
        </div>
        {% endif %}
    {% endfor %}
    </div>
</section>

